{
  "branchNameLinter": {
    "prefixes": [
      "main",
      "feature",
      "feat",
      "bugfix",
      "fix",
      "hotfix",
      "release",
      "chore"
    ],

    "suggestions": {
      "feat": "feature",
      "fix": "bugfix"
    },

    "banned": ["wip"],
    "disallowed": ["master", "develop"],
    "skip": ["main", "develop"],

    "separator": "/",

    "regex": "^(main|(?<type>feature|feat|bugfix|fix|hotfix|release|chore))\\/(?<description>(?!.*(--|\\.\\.|-$|\\.$))[a-z0-9]+[a-z0-9.-]*[a-z0-9]+)$",

    "msgDoesNotMatchRegex": "Branch \"%s\" does not follow the Conventional Branch specification."
  }
}
